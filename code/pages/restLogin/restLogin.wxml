<!--restLogin.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
    <view class="weui-cells_title header">
        商家登录
    </view>
    <view class="page-section">
        <view class="weui-cells__title">账号</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <input name="restaurant_id" class="weui-input" auto-focus placeholder="restaurant ID"/>
            </view>
        </view>
    </view>
    <view class="page-section">
        <view class="weui-cells__title">密码</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <input name="password" class="weui-input" password type="text" placeholder="password" />
            </view>
        </view>
    </view>
    <view class="weui-btn-area">
        <button class="login-btn" formType="submit" type="primary">登录</button>
        <button formType="reset" type="warn">重置</button>
    </view>
</form>